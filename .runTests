#/bin/bash

clear

echo ' '
echo ' '
for (( var=1; ; var++ )); do
	if [[ -a .test$var.in ]]; then
		
		echo '---------------------------------------------------------------------------'
		./a.out < .test$var.in > .fisout
		echo ' '
		echo ' '
		echo '---------------------------Input-----------------------------'
		cat .test$var.in	
		echo '---------------------------Output------------------------------'
		cat .test$var.out
		echo '-------------------------Your Output---------------------------'
		cat .fisout
		echo '---------------------------------------------------------------'
		
		if diff -q .fisout .test$var.out > /dev/null ; then	
			echo '               Status:   OK !                                      YES !'
			res[$((var))]='OK !'
		else
			echo '               Status:   WA !                                      NO !'
			res[$((var))]='WA !'
		fi
		echo ' '
		echo ' '

	else
		break;
	fi	
done

echo '---------------------------------------------------------------------------'
echo ' '
echo ' '
echo '     Result:'
for (( foo=1; $foo<$var; foo++ )); do
	echo '       '${res[$((foo))]};
done

rm -r -f .*.in
rm -r -f .*.out
rm -r -f .fisout
rm -r -f .nameIn

echo ' '
echo ' '
echo ' '

