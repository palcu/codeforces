#/bin/bash

clear

echo ' '
echo ' '
echo ' '
for (( var=1; ; var++ )); do
	if [[ -a .test$var.in ]]; then
		
		echo '-------------------------------------------------------------------------------------------'
		echo '          Test '$var': '
		./a.out < .test$var.in > .fisout
		
		echo 'Input, Output, Your Output'
		echo ' '
		echo '----------------------------Input------------------------------'
		cat .test$var.in	
		echo '----------------------------Output-----------------------------'
		cat .test$var.out
		echo '-------------------------Your Output---------------------------'
		cat .fisout
		echo '---------------------------------------------------------------'
		
		if diff -q .fisout .test$var.out > /dev/null ; then	
			echo '               Status:   OK !                                           YES !'
			res[$((var))]='OK !'
		else
			echo '               Status:   WA !                                           NO !'
			res[$((var))]='WA !'
		fi
		echo ' '
		echo ' '

	else
		break;
	fi	
done

echo '-------------------------------------------------------------------------------------------'
echo ' '
echo ' '
echo '     Result:'
for (( foo=1; $foo<$var; foo++ )); do
	echo '       '${res[$((foo))]};
done


echo ' '
echo ' '
echo ' '
